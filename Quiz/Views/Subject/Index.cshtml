@model PagedList.IPagedList<Quiz.ViewModel.SubjectViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Môn học
        <small>Danh sách</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Môn học</a></li>
        <li class="active">Danh sách môn học</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Bảng danh sách môn học</h3>
                </div>
                <a href="/Subject/Create" style="margin-left:10px" class="btn btn-sm btn-success">Thêm mới</a>
                <div class="box-body">
                    <h5 class="text-danger">Có tổng số: @ViewBag.Count môn học khác nhau.</h5>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Tên môn học</th>
                                <th style="width:10%">Nghiệp vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td style="width:10%">
                                            <a href="/Subject/Update?id=@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                            <a onclick="deleteItem(@item.Id)" class="btn btn-sm btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tên môn học</th>
                                <th style="width:10%">Nghiệp vụ</th>
                            </tr>
                        </tfoot>
                    </table>
                    @{ if (Model.PageCount > 1)
                        {
                            <nav aria-label="Page navigation example" style="text-align:center">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @keyWord = @ViewBag.SearchString }))
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function deleteItem(id) {
        $.ajax({
            url: "/Subject/Delete?id=" + id,
            type: "post",
            dataType: "json",
            data: {},
            success: function (result) {
                var notify = $.notify('<strong>Xóa thành công</strong><br/>' + result + '<br />', {
                    type: 'success',
                    allow_dismiss: false,
                    timer: 1000,
                });
                setTimeout(function () {
                    window.location.reload();
                }, 500);
            },
            error: function () {
                var notify = $.notify('<strong>Lỗi</strong><br/>Không xóa được<br />', {
                    type: 'warning',
                    allow_dismiss: false,
                });
            }
        })
    }
</script>


