@model Quiz.ViewModel.SubjectViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Thêm môn học</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("Create", "Subject", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });

            <div class="form-group">
                <label>Tên môn học</label>
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập tên môn học mới" })
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
                <a href="/Subject/Index" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
