@model PagedList.IPagedList<Quiz.ViewModel.UserViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Câu hỏi
        <small>Danh sách</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Người dùng</a></li>
        <li class="active">Danh sách người dùng</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Bảng danh sách người dùng</h3>
                </div>
                <div class="box-body">
                    <h5 class="text-danger">Có tổng số: @ViewBag.Count người dùng khác nhau.</h5>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th>Giới tính</th>
                                <th>Nhóm</th>
                                <th>Trạng thái</th>
                                <th style="width:10%">Nghiệp vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.Gender.GetDisplayName()
                                        </td>
                                        <td>
                                            @item.UserType
                                        </td>
                                        <td>
                                            @item.Status
                                        </td>
                                        @if (item.Id == Convert.ToInt32(Session["UserID"]))
                                        {

                                        }
                                        else
                                        {
                                            <td style="width:10%">
                                            <a onclick="deleteItem(@item.Id)" class="btn btn-sm btn-danger">Thao tác</a>
                                        </td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Họ tên</th>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th>Giới tính</th>
                                <th>Nhóm</th>
                                <th>Trạng thái</th>
                                <th style="width:10%">Nghiệp vụ</th>
                            </tr>
                        </tfoot>
                    </table>
                    @{ if (Model.PageCount > 1)
                        {
                            <nav aria-label="Page navigation example" style="text-align:center">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @keyWord = @ViewBag.SearchString }))
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function deleteItem(id) {
        $.ajax({
            url: "/User/Change?id=" + id,
            type: "post",
            dataType: "json",
            data: {},
            success: function (result) {
                var notify = $.notify('<strong>Thay đổi thành công</strong><br/>' + result + '<br />', {
                    type: 'success',
                    allow_dismiss: false,
                    timer: 1000,
                });
                setTimeout(function () {
                    window.location.reload();
                }, 500);
            },
            error: function () {
                var notify = $.notify('<strong>Lỗi</strong><br/>Không thay đổi được<br />', {
                    type: 'warning',
                    allow_dismiss: false,
                });
            }
        })
    }
</script>

